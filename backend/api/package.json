{
  "name": "kvlabs-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file ../.env --hot src/index.ts",
    "start": "bun --env-file ../.env src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepare": "cd ../.. && husky backend/api/.husky",
    "db:generate": "bun --env-file ../.env drizzle-kit generate",
    "db:migrate": "bun --env-file ../.env drizzle-kit migrate",
    "db:push": "bun --env-file ../.env drizzle-kit push",
    "db:studio": "bun --env-file ../.env drizzle-kit studio",
    "db:seed": "bun --env-file ../.env src/db/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "@polar-sh/sdk": "^0.42.2",
    "@sentry/bun": "^10.36.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.5",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "posthog-node": "^5.24.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/bun": "^1.3.6",
    "@types/nodemailer": "^7.0.5",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
