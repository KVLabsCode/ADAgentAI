{
  "name": "kvlabs-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file ../.env --hot src/index.ts",
    "start": "bun --env-file ../.env src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepare": "cd ../.. && husky backend/api/.husky",
    "db:generate": "bun --env-file ../.env drizzle-kit generate",
    "db:migrate": "bun --env-file ../.env drizzle-kit migrate",
    "db:push": "bun --env-file ../.env drizzle-kit push",
    "db:studio": "bun --env-file ../.env drizzle-kit studio",
    "db:seed": "bun --env-file ../.env src/db/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "@neondatabase/serverless": "^0.10.0",
    "@polar-sh/sdk": "^0.32.0",
    "@sentry/bun": "^10.32.1",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "posthog-node": "^5.18.1",
    "yaml": "^2.8.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.1.0",
    "@types/nodemailer": "^7.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  }
}
