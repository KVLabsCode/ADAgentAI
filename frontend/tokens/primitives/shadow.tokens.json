{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Shadow definitions - Linear uses multi-layer shadows",
  "shadow": {
    "$type": "shadow",
    "none": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "0px",
        "color": "#00000000"
      }
    },
    "sm": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px",
        "color": "#0000000d"
      }
    },
    "md": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "6px",
        "spread": "-1px",
        "color": "#0000001a"
      }
    },
    "lg": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "10px",
        "blur": "15px",
        "spread": "-3px",
        "color": "#0000001a"
      }
    },
    "xl": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "20px",
        "blur": "25px",
        "spread": "-5px",
        "color": "#0000001a"
      }
    }
  }
}
