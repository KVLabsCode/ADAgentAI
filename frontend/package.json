    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "marked": "^17.0.1",
    "next": "16.1.4",
    "next-sanity": "^12.0.14",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.335.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "reading-time": "^1.5.0",
    "recharts": "3.7.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "use-stick-to-bottom": "^1.1.2",
